datasources:
  location: 
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/days
  
      query: |
        SELECT 
        '$.location' AS location, 
        id, 
        '$.day' AS day
        FROM [default/days] 
        WHERE day LIKE strftime('%d', 'now', '+02:00')
     # DISTINCT location
      queryParameters:
        myParam: value
  
  poi:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/poi
  
      query: |
        SELECT 
          id, 
          '$.name' AS name, 
          '$.description' AS description, 
          '$.avatar' AS avatar, 
          '$.address' AS address,
          '$.rating' AS rating,  
          '$.hours' AS hours,
          '$.about' AS about,
          '$.day' AS day,
          '$.location' AS location,
          '$.googleURL' AS googleURL
        FROM [default/poi] 
        WHERE day LIKE strftime('%d', 'now', '+02:00')
        ORDER BY name ASC

data: =@ctx.datasources.poi
item:
  type: component.list-item
  options:
    title: =@ctx.current.item.name
    description: =@ctx.current.item.description
    leftElement: 
      element: image
      text: =@ctx.current.item.name
      uri: =@ctx.current.item.avatar
    rightElement: 
      element: value
      text: ‚Üê 
    swipeable:
      left:
        - label: location
          icon: pin
          color: primary
          onPress: 
            type: action.go-to
            options:
              linkTo: poi-selection
              parameters:
                name: =@ctx.current.item.name
                description: =@ctx.current.item.description
                avatar: =@ctx.current.item.avatar
                address: =@ctx.current.item.address
                rating: =@ctx.current.item.rating
                hours: =@ctx.current.item.hours
                about: =@ctx.current.item.about
                url: =@ctx.current.item.googleURL
                
    