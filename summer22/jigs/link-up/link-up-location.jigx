title: TBD
type: jig.default

datasources:
  location:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/Location
  
      query: SELECT id, '$.name', '$.decknumber' FROM [default/Location] WHERE id = @LOC
      queryParameters:
        LOC: =@ctx.jig.inputs.

children:
  - type: component.image
    options:
      source:
        uri: =@ctx.datasources.static-data-map-loc.image