title: Fun Fact
type: jig.default
widgets:
  2x2: 
    type: widget.list
    options:
      top:
        type: component.trend
        options:
          title: "🧐 Guess, who it is:"
          style:
            isValueHidden: true
      data: =@ctx.datasources.facts
      item:         
        type: component.list-item
        options:
          title: =('"' & @ctx.current.item.fact & '"')
          rightElement: 
            element: button
            title: ⁉️
            onPress: 
              type: action.go-to
              options:
                linkTo: fun-fact
header: 
  type: component.image
  options:
    title: 🧐 Guess who it is
    source:
      uri: https://images.unsplash.com/photo-1466921583968-f07aa80c526e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80


onRefresh: 
  type: action.sync-entities
  options:
    provider: DATA_PROVIDER_DYNAMIC
    entities:
      - entity: default/game-status
      - entity: default/facts
      - entity: default/teammates
      - entity: default/members

datasources:
  gameStatus: 
    type: datasource.sqlite
    options:
      isDocument: true
      provider: DATA_PROVIDER_DYNAMIC
      entities:
        - default/game-status
      query: |
        SELECT 
          id, 
          '$.status' AS status
        FROM [default/game-status] 

  facts:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
      entities:
        - default/facts
      query: |
        SELECT 
          id, 
          '$.user' AS user, 
          '$.fact' AS fact,
          '$.active' AS active
        FROM [default/facts] 
        WHERE active LIKE @param
      queryParameters:
        param: "true"

  teammates:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
      entities:
        - default/teammates
        - default/members
      query: |
        SELECT
          tb.id AS tbID,
          json_extract(tb.data, '$.firstName') AS tbfirstName,
          json_extract(tb.data, '$.lastName') AS lastName,
          json_extract(tb.data, '$.team') AS team,
          json_extract(tb.data, '$.voted') AS voted,
          json_extract(tb.data, '$.email') AS tbEmail,
          json_extract(tM.data, '$.avatar') AS avatar,
          json_extract(tM.data, '$.email') AS tmEmail
        FROM
          [default/teammates] AS tb
          LEFT JOIN [default/members] AS tM ON tbEmail LIKE tmEmail
          
  currentUser:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
      entities:
        - default/teammates
      query: |
        SELECT 
          id, 
          '$.email' AS email
        FROM [default/table-name] 
        WHERE eamil = @filter
      queryParameters:
        filter: =@ctx.user.email


children:
  - type: component.entity
    options:
      children:
        - type: component.entity-field
          options:
            label: Fun Fact
            value: "=(@ctx.datasources.facts.fact)"
            isMultiline: true
  - type: component.form
    instanceId: fact
    options:
      isDiscardChangesAlertEnabled: false
      children:
        # - type: component.text-field
        #   instanceId: id
        #   options:
        #     label: id
        #     isHidden: true    
        # - type: component.text-field
        #   instanceId: factid
        #   options:
        #     label: factid
        #     isHidden: true
        #     initialValue: =@ctx.datasources.facts.id

        
        # Current Fun Fact
        # - type: component.text-field
        #   instanceId: fact
        #   options:
        #     isIgnored: true
        #     label: "=(@ctx.datasources.facts.fact)"
        #     initialValue: TEST
        #     # value: "=(@ctx.datasources.facts.fact)"
        #     isMultiline: true
        #     textArea: dynamic
        # Jigxies List
        - type: component.dropdown
          instanceId: teammatesList
          options:
            label: Guess which teammate
            data: =@ctx.datasources.teammates
            item:
              type: component.dropdown-item
              options:
                title: =@ctx.current.item.tbfirstName & ' ' & @ctx.current.item.lastName
                value: =@ctx.current.item.tbID
                leftElement: 
                  element: avatar
                  text: =($substring($substringBefore(@ctx.current.item.tbfirstName, " "), 0, 1) & $substring($substringAfter(@ctx.current.item.lastName, " ") , 0, 1) )
                  uri: =@ctx.current.item.avatar
            isSearchable: true
        # Current User
        - type: component.text-field
          instanceId: player
          options:
            label: player
            initialValue: =@ctx.user.email
            isHidden: true


actions:
  - children:
      - type: action.execute-entity
        options:
          title: Update Record
          provider: DATA_PROVIDER_DYNAMIC
          entity: default/teammates
          method: update
          goBack: stay
          data:
            id: =@ctx.datasources.currentUser.id
            guesses: =@ctx.components.teammatesList.state.value
          onSuccess: 
            type: action.confirm
            options:
              isConfirmedAutomatically: true
              onConfirmed: 
                type: action.go-back
              modal:
                title: ""
                
placeholders:
  - when: "=@ctx.datasources.gamestatus.status = 'done'"
    title: 🏆 Game over 🏆
    icon: is-offline
  - when: =$count(@ctx.datasources.facts[user = @ctx.user.email]) = 0
    title: Tell us some fun fact about yourself
    icon: missing-data
    onPress: 
      type: action.go-to
      options:
        title: Tell us now
        linkTo: my-fact
  - when: "=@ctx.datasources.gamestatus.status != 'open' or $count(@ctx.datasources.facts[active = 'true']) = 0"
    title: Now, let's wait until Grant starts the game
    icon: is-offline
  - when: "=@ctx.datasources.facts[active = 'true'].user = @ctx.user.email"
    title: For obvious reasons you must skip this round :)
    icon: is-offline
  - when: "=$count(@ctx.datasources.guesses[factid = @ctx.datasources.facts[active = 'true'].id and player = @ctx.user.email] ) > 0"
    title: Let's wait for Grant...
    icon: is-offline