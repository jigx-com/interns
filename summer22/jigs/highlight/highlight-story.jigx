title: Highlight
type: jig.default

datasources:
  # First Slide Data
  highlight:
    type: datasource.sqlite
    options:
      provider: DATA_PROVIDER_DYNAMIC
  
      entities:
        - default/testHighlight
  
      query: |
        SELECT id, 
        '$.day' AS day,
        '$.photo' AS photo,
        '$.title' AS title, 
        '$.subtitle' AS subtitle,
        '$.linkTo' AS linkTo
        FROM [default/testHighlight] 
        WHERE day LIKE strftime('%d', 'now', '-07:00')
        ORDER BY '$.slide'

stories:
  type: component.story-group
  options:
    data: =@ctx.datasources.highlight
    groupName: =("Good Morning, " & @ctx.user.displayName & "!")
    item: 
      type: component.image
      options:
        title: =@ctx.current.item.title
        subtitle: =@ctx.current.item.subtitle 
        source:
          uri: =@ctx.current.item.photo
        onPress: 
          type: action.go-to
          options:
            title: View
            linkTo: =@ctx.current.item.linkTo

