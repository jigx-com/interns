        #       options:
        #         align: center
        #         title: =(@ctx.datasources.top-reactions.firstName & ' ' & @ctx.datasources.top-reactions.middleName  & ' ' & @ctx.datasources.top-reactions.lastName)
        #         subtitle: Helper of the Week
                
        #     source: 
        #       uri: https://images.unsplash.com/photo-1566856528802-9ab6cbed4ee8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTF8fG1hb3JpfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=700&q=60
            
        #     bottom: 
        #       type: component.titles
        #       options:
        #         align: left
        #         title: =@ctx.datasources.top-reactions.helps
        #         subtitle: claps
              
        - type: widget.avatar
          options:
            
            top:
              type: component.titles
              options:
                align: center
                title: =(@ctx.datasources.top-reactions.firstName & ' ' & @ctx.datasources.top-reactions.middleName  & ' ' & @ctx.datasources.top-reactions.lastName)
                subtitle: Helper of the Week
            
            uri: https://images.unsplash.com/photo-1566856528802-9ab6cbed4ee8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTF8fG1hb3JpfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=700&q=60
            
            text: =$uppercase($substring(@ctx.current.item.firstName, 0, 1) & $substring(@ctx.current.item.lastName, 0, 1))
            
            bottom:
              type: component.titles
              options:
                align: left
                title: =@ctx.datasources.top-reactions.helps
                subtitle: claps


children:
  - jigId: helping-hands-leaderboard
  
  - jigId: helping-hands-user-score
    
